#version 400


in vec2 texCoord;

out vec4 outputColor;

uniform sampler2D fontTexture;
uniform vec4 pixelColor;

void main(void)
{
	vec4 color = texture(fontTexture, texCoord);

	if(color.r == 0.0f)
	{
	    discard;
	}else
	{
		color.a = 1.0f;
		color = color * pixelColor;
	}

	outputColor = color;

}